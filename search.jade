!!! 5
html
  head
    title L'Haym'uq!
    script(src='/js/moment.min.js')
    link(rel='stylesheet',href='http://fonts.googleapis.com/css?family=Shadows+Into+Light')
    link(rel='stylesheet',href='http://fonts.googleapis.com/css?family=Bubbler+One')
    link(rel='stylesheet',href="/css/reset.css")
    link(rel='stylesheet',href="/css/main.css")
    
  body
    div(id="header")
      img(id="mascot" src="/images/mascot.png")
      h2(id="logo") L'Haym'uq!
      h5(id="description") Ask your Money
    div(id="content")
      input(id="search-bar" type='search' autofocus='autofocus' list='sample-queries')
      img(id="search-button" src="/images/search.png")
    div(id="results")
      div(id="answer-summary")
      table(id="answer-transactions" class="CSSTableGenerator")
        tr
          td Date
          td Amount
          td Other Party
    //- Some sample queries
    datalist(id="sample-queries")
      option(value="How much money did I spend between March 15th and October 11th 2012?")
      option(value="Show me all payments from Peter between April 10th and December 17th 2012")
    script(src='client.js')
